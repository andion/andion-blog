<% form_for :comment, @comment, :url => comments_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <%= f.hidden_field "post_id", :value => @post.id %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>