<div id="add_comment">
<% form_for :comment, @comment, :url => add_comment_post_path(@post) do |f| %>
  
  <%= f.error_messages %>

  <p>
    <%= f.label :author %> <span class="hint">(Optional)</span><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
</div>